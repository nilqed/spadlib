quickLoad pchain

[A,B,C,D] :=points [A,B,C,D]

S:=barycenter(A+B+C)
point? S --> true

lquo(A*S,3*A) --> B+C

lquo(A*B,A) --> B
rquo(A*B,B) --> A

lf:=lfac(A*S,3*A) --> 
rf:=rfac(S*A,3*A) --> 
test(lf.1 * lf.2=A*S)
test(rf.1 * rf.2=S*A)




eqb:=bdry(A*B)=bdry(C*D)

eqA:=A*eqb
eqB:=B*eqb
eqC:=C*eqb
eqD:=D*eqb

